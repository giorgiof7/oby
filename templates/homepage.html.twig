{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div id="weightings-app"></div>
    </div>

    <br><br><br><hr>

    <div>

        <h1>Weightings <span class="badge bg-primary">{{ weightings| length }}</span></h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Weight</th>
                <th scope="col"></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for weighting in weightings %}
                <tr>
                    <td>{{ weighting.registeredAt | ago }}</td>
                    <td>{{ weighting.weight }}</td>
                    <td>{{ (weighting.isMilestone) ? '<i class="fas fa-bullseye" data-bs-toggle="tooltip" data-bs-placement="top" title="Milestone"></i>' : '' }}</td>
                    <td><a href="{{ path('show_weighting', {id: weighting.id}) }}" role="button" class="btn btn-outline-primary">Show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('new_weighting') }}" role="button" class="btn btn-primary"><i class="fas fa-plus"></i></a>

    </div>
{% endblock %}

{% block title %}
    Weightings
{% endblock %}

