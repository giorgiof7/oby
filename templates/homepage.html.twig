{% extends 'base.html.twig' %}

{% block body %}
    <h1>Weighings <span class="badge bg-primary">{{ weighings| length }}</span></h1>

    <div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Weight</th>
                <th scope="col"></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for weighing in weighings %}
                <tr>
                    <td>{{ weighing.registeredAt | ago }}</td>
                    <td>{{ weighing.weight }}</td>
                    <td>{{ (weighing.isMilestone) ? '<i class="fas fa-bullseye" data-bs-toggle="tooltip" data-bs-placement="top" title="Milestone"></i>' : '' }}</td>
                    <td><a href="{{ path('show_weighing', {id: weighing.id}) }}" role="button" class="btn btn-outline-primary">Show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('new_weighing') }}" role="button" class="btn btn-primary"><i class="fas fa-plus"></i></a>

    </div>
{% endblock %}

{% block title %}
    Weighings
{% endblock %}

